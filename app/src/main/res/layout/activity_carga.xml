<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CargaActivity">


    <!-- Fondo Carga -->
    <ImageView
        android:id="@+id/fondoCarga"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/carga_fondo_carga">

    </ImageView>

    <!-- Animacion Carga -->
    <ImageView
        android:id="@+id/animacionCarga"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:adjustViewBounds="false"
        android:background="@drawable/animacion_carga"
        app:layout_constraintEnd_toStartOf="@+id/fondoCarga"
        app:layout_constraintStart_toEndOf="@+id/fondoCarga"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="594dp">

    </ImageView>



</androidx.constraintlayout.widget.ConstraintLayout>